Import( 'GN' )

import os.path

def CopyExternalBinaries( env, sources, blddir ):
	targets = []
	for x in sources:
		dst = os.path.join( blddir, 'bin', os.path.basename( x.path )  )
		Command( dst, x.srcnode(), Copy( "$TARGET", "$SOURCE" ) )
		targets.append( dst )
	return targets

sources = GN.Glob( GN.targetOS + "." + GN.targetCPU + "\*.*", True )
GN.DefaultAlias( 'GNexternBin', GN.SDKBin( sources ) )
