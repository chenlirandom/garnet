Import( 'GN' )
sources = [
    'xenonCapsMgr.cpp',
    'xenonContextMgr.cpp',
    'xenonDispMgr.cpp',
    'xenonDrawMgr.cpp',
    'xenonGpuProgramASM.cpp',
    'xenonGpuProgramHLSL.cpp',
    'xenonIdxBuf.cpp',
    'xenonLine.cpp',
    'xenonGpu.cpp',
    'xenonRenderTargetMgr.cpp',
    'xenonResource.cpp',
    'xenonResourceManager.cpp',
    #'xenonSampler.cpp',
    'xenonTexture.cpp',
    'xenonVertexDecl.cpp',
    'xenonVtxBuf.cpp',
]
cluster = GN.newSourceCluster( sources, 'pch.h', 'pch.cpp' )
cluster.addCompileFlags( CPPPATH = ['#src\priv\gfx\util\gpu'] )
target  = GN.newTarget( 'stlib', 'GNgpuXenon', [cluster], dependencies = ['GNgpuCommon'] )
