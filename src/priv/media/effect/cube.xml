<?xml version="1.0" encoding="utf-8"?>
<effect>
	<parameters>
		<uniform name="pvw"/>
		<texture name="cube"/>
	</parameters>

	<!--
	============================================================================
		Shaders
	============================================================================
	-->

	<shaders>
		<!-- D3D HLSL shaders -->
		<shader name="d3dvs" type="VS">
			<prerequisites>
				<token type="opcode" value="CHECK_SHADER_PROFILE">
					<token type="values" value="vs_1_1"/>
				</token>
			</prerequisites>
			<uniref ref="pvw" binding="pvw"/>
			<code lang="D3D_HLSL" hints="...">
<![CDATA[
uniform float4x4 pvw : register(c0);
void main(
	in  float4 ipos : POSITION,
	out float4 opos : POSITION,
	out float3 otex : TEXCOORD0 )
{
	opos = mul( pvw, ipos );
	otex = sign( ipos.xyz );
}
]]>
			</code>
		</shader>

		<shader name="d3dps" type="PS">
			<prerequisites>
				<token type="opcode" value="CHECK_SHADER_PROFILE">
					<token type="values" value="ps_1_1"/>
				</token>
			</prerequisites>
			<texref ref="cube" stage="0"/>
			<code lang="D3D_HLSL" hints="...">
<![CDATA[
sampler s0 : register(s0);
float4 main( in float3 itex : TEXCOORD0 ) : COLOR0
{
	return texCUBE( s0, itex );
}
]]>
			</code>
		</shader>

		<!-- Cg shaders -->
		<shader name="cgvs" type="VS">
			<prerequisites>
				<token type="opcode" value="CHECK_SHADER_PROFILE">
					<token type="values" value="cgvs"/>
				</token>
			</prerequisites>
			<uniref ref="pvw" binding="pvw"/>
			<code lang="CG" hints="...">
<![CDATA[
uniform float4x4 pvw : register(c0);
void main(
	in  float4 ipos : POSITION,
	out float4 opos : POSITION,
	out float3 otex : TEXCOORD0 )
{
	opos = mul( pvw, ipos );
	otex = clamp( ipos.xyz, -1, 1 ); // Note: here we can't use sign(), because Cg 1.5 has bug when compile sign() to D3D vs_3_0 shader.
}
]]>
			</code>
		</shader>

		<shader name="cgps" type="PS">
			<prerequisites>
				<token type="opcode" value="CHECK_SHADER_PROFILE">
					<token type="values" value="cgps"/>
				</token>
			</prerequisites>
			<texref ref="cube" stage="0"/>
			<code lang="CG" hints="...">
<![CDATA[
sampler s0 : register(s0);
float4 main( in float3 itex : TEXCOORD0 ) : COLOR0
{
	return texCUBE( s0, itex );
}
]]>
			</code>
		</shader>

		<!-- fixed pipeline -->
		<shader name="fixgs" type="GS"/>

	</shaders>

	<!--
	============================================================================
		Techniques
	============================================================================
	-->

	<techniques>
        <!--rsb
            CULL_MODE="CULL_NONE"
        /-->
		<!--<technique name="d3d">
			<pass vs="d3dvs" ps="d3dps" gs="fixgs"/>
		</technique>-->
		<technique name="cg">
			<pass vs="cgvs" ps="cgps" gs="fixgs"/>
		</technique>
	</techniques>
</effect>
